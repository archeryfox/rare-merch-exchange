# ============================================
# RARE MERCH EXCHANGE - Переменные окружения
# ============================================

# ============================================
# СЕРВЕР
# ============================================
SERVER_PORT=8080
SERVER_HOST=localhost
GIN_MODE=debug

# ============================================
# БАЗА ДАННЫХ (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=rare_merch_exchange
DB_SSL_MODE=disable

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT АУТЕНТИФИКАЦИЯ
# ============================================
# ВНИМАНИЕ: Измените этот секрет в продакшене!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE_HOURS=24

# ============================================
# ЗАГРУЗКА ФАЙЛОВ
# ============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# ============================================
# АУКЦИОНЫ
# ============================================
AUCTION_SOFT_CLOSE_MINUTES=5
AUCTION_MIN_INCREMENT_PERCENT=5

# ============================================
# ЛОТЕРЕИ
# ============================================
LOTTERY_MAX_TICKETS_PER_USER=10
LOTTERY_MIN_TICKETS=1

# ============================================
# КОМИССИИ
# ============================================
COMMISSION_RATE_VERIFIED=0.05
COMMISSION_RATE_REGULAR=0.08

# ============================================
# ЭСКРОУ
# ============================================
ESCROW_AUTO_RELEASE_DAYS=7
ESCROW_DISPUTE_PERIOD_DAYS=3

# ============================================
# АНТИФРОД
# ============================================
ANTIFRAUD_MAX_BIDS_PER_MINUTE=10
ANTIFRAUD_SUSPICIOUS_ACTIVITY_THRESHOLD=5

# ============================================
# ЛОГИРОВАНИЕ
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================

# Email настройки (для уведомлений)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@rare-merch-exchange.com

# Платежные системы
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Внешние API
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Мониторинг
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ============================================
# ПРОДАКШЕН НАСТРОЙКИ
# ============================================
# Для продакшена раскомментируйте и измените:

# GIN_MODE=release
# LOG_LEVEL=warn
# LOG_FORMAT=json
# DB_SSL_MODE=require
# JWT_SECRET=your-very-secure-production-secret-key-here
# UPLOAD_PATH=/var/uploads
# REDIS_PASSWORD=your-redis-password
